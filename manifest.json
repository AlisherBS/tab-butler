{
  "manifest_version": 3,
  "name": "Tab Butler",
  "version": "1.3",
  "description": "Умное управление вкладками с приоритетами, автозакрытием, восстановлением, экспортом и сортировкой",
  "permissions": ["tabs", "storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "commands": {
    "open_popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Открыть Tab Butler"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
